<html>
    <head>
        <%- include('../partial/bootstrap.ejs')%>
     
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    </head>
    <body>
        
        <div class="container mt-5">
            <div class="row">
                <div class="col-12">
                  <table class="table">
                      <thead>
                          <tr>
                              <th>S.no</th>
                              <th>Image</th>
                              <th>Name</th>
                              <th>Price</th>
                              <th>Description</th>
                              <th>Quantity</th>
                              <th>Edit</th>
                              <th>Delete</th>
                          </tr>
                      </thead>
                      <tbody>
                         <%
                          let sno = 1;
                          for(product of productList)
                          {
                         %>
                           <tr id="row<%=product.id%>">
                               <td><%=sno++%></td>
                               <td>
                                   <img src="<%=product.imageUrl%>" width="100px" heigth="100px" alt="image"/>
                               </td>
                               <td><%=product.name%></td>
                               <td><%=product.price%></td>
                               <td><%=product.description%></td>
                               <td><%=product.quantity%></td>
                               <td>
                                  <a href="/product/edit-product/<%=product.id%>"> 
                                   <button class="btn btn-primary">Edit</button>
                                 </a> 
                               </td>
                               <td>
                                 <button  onclick="deleteProduct('<%=product.id%>')" id="delete-button" class="btn btn-danger">Delete</button>
                               </td>
                           </tr> 
                         <%}%>    
                      </tbody>
                      <script>
                          function deleteProduct(productId){
                            if(confirm('Are you sure ?')){  
                                $.ajax({
                                    url: '/product/delete-product/'+productId,
                                    success: function(result){
                                    $('#row'+productId).remove();
                                    }
                                });
                            }
                          }
                      </script>
                  </table>
                </div>
            </div>
        </div>
    </body>
</html>